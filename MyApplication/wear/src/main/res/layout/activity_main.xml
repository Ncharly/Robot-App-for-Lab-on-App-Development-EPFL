<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Start"
        android:background="@drawable/round_shape"
        android:textColor="#f8fdf9"
        android:textSize="10sp"
        android:onClick="onclick_start_wear"/>

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_expand_less_white_22"
        android:onClick="onclick_up_wear"/>

    <ImageButton
        android:id="@+id/imageButton5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/imageButton4"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:rotation="180"
        android:src="@drawable/ic_expand_less_white_22"
        android:onClick="onclick_down_wear"/>

    <ImageButton
        android:id="@+id/imageButton6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="7dp"
        android:rotation="270"
        android:src="@drawable/ic_expand_less_white_22"
        android:onClick="onclick_left_wear"/>

    <ImageButton
        android:id="@+id/imageButton7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="7dp"
        android:rotation="90"
        android:src="@drawable/ic_expand_less_white_22"
        android:onClick="onclick_right_wear"/>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="136dp"
        android:layout_marginBottom="25dp"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:text="Back"
        android:textSize="@dimen/screen_percentage_05" />


</RelativeLayout>